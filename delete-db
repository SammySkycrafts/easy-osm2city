first=1
while [[ "$#" -gt 0 ]]
do
key="$1"

case $key in
	-h|--help)
		echo "usage: delete-db <database> [OPTIONS]"
		echo "Deletes the database"
		echo ""
		echo "OPTIONS"
		echo "  -h, --help	Shows this help and exit"
		exit 0
	;;

	*)
		if [ $first == "1" ]; then
			database="$1"
			shift # past database
			first=0
		else
			echo "Unknown option $key"
			exit 1
		fi
	;;
esac
done

psql --dbname="postgres" -c "DROP DATABASE IF EXISTS \"$database\""
sed -ri "s/^$key$//" .databases
